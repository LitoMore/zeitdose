{
  "packages": [
    "nodejs@latest",
    "dprint@latest"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true",
    "PNPM_HOME": "$HOME/.local/share/pnpm"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "fmt": "dprint check",
      "fmt:fix": "dprint fmt"
    }
  }
}
